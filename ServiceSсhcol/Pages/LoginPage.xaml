<Page x:Class="ServiceSсhcol.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ServiceSсhcol.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"> 
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Style="{StaticResource BlockCommon}" Text="Логин"></TextBlock>
                <TextBox x:Name="TBoxLogin" Width="170"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Style="{StaticResource BlockCommon}" Text="Пароль"></TextBlock>
                <PasswordBox x:Name="TBoxPassword" Width="175"></PasswordBox>
            </StackPanel>
            <Button x:Name="BtnLogin" Content="Войти" HorizontalAlignment="Right" Click="BtnLogin_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
